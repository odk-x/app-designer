<form>
    {{> labelHint}}
    <fieldset data-role="controlgroup"
        {{#eachProperty htmlAttributes}}
            {{property}}="{{value}}"
        {{/eachProperty}}
        >
        {{#each choices}}
            <label>
                <input
                    {{#if ../select_one}}
                        type="radio"
                    {{else}}
                        type="checkbox"
                    {{/if}}
                    {{#if checked}}
                        checked="checked"
                    {{/if}}
                    {{! the name attribue has to be the same for all the options}}
                    name="{{../name}}"
                    value="{{name}}" />
            {{localize label}}
            </label>
        {{/each}}
        {{#if or_other}}
                <input
                    {{#if select_one}}
                        type="radio"
                    {{else}}
                        type="checkbox"
                    {{/if}}
                    {{#if checked}}
                        checked
                    {{/if}}
                    name="{{name}}"
                    id="other"
                    value="other" />
                <label for="other">
                    Other:
                    <div><input
                        name="otherValue"
                        value="{{otherValue}}"
                        style="height:36px;position:initial;"
                        {{#unless other.selected}}
                            disabled="true"
                        {{/unless}} /></div>
                </label>
        {{/if}}
        {{#if select_one}}
            <button type="button" class="deselect">Deselect</button>
        {{/if}}
    </fieldset>
</form>